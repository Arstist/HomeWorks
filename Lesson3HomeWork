// Задание 1.
import java.util.Random;
import java.util.Scanner;

public class Lesson3HomeWork {
    static Random random = new Random();
    public static void main(String[] args) {
            Scanner scMain = new Scanner(System.in);

            playLevel(10);
            scMain.close();
        }

        private static void playLevel(int range) {
            int count = 3;
            System.out.println("Игра: Угадай число");
            System.out.println("Осталось " +count+" попытки");
            Scanner sc = new Scanner(System.in);
            int randomNum = random.nextInt(range);
            System.out.println("Угадай число от 0 до " + range-1);

            for (int i = 0; i <= count+1; i++) {
                System.out.print("Число: ");
                int inputNumber = sc.nextInt();
                if (inputNumber == randomNum) {
                    System.out.println("Ты выйграл");
                    break;
                } else if (inputNumber < randomNum) {
                    System.out.println("Загаданое число больше");
                } else if (inputNumber > randomNum) {
                    System.out.println("Загаданое число меньше");
                }
                count -=1;
                System.out.println("Осталось " +count+" попыток");
            }
            System.out.println("Начать заного");
            System.out.println("1 - да / 2 - нет");
            int yesNo = sc.nextInt();
            if(yesNo == 1) {
                playLevel(9);
                count = 3;
            } else if(yesNo == 2) {
                System.out.println("Спасибо за игру");
            } else {
                System.out.println("Такого варианта нет.");
            }

        }
   }
