//Задание #2
import java.util.Random;
import java.util.Scanner;

public class Lesson3_1HomeWork {
    static String[] hashPaste = {"#", "#", "#", "#", "#", "#", "#", "#", "#", "#", "#", "#", "#", "#", "#"};

    static Scanner sc = new Scanner(System.in);
    public static void main(String[] args) {
        String[] words = {"apple", "orange", "lemon", "banana", "apricot", "avocado", "broccoli", "carrot", "cherry", "garlic", "grape", "melon", "leak", "kiwi", "mango", "mushroom", "nut", "olive", "pea", "peanut", "pear", "pepper", "pineapple", "pumpkin", "potato"};
        Random random = new Random();

        int rRandom = random.nextInt(words.length);
        String conceived = words[rRandom];

        gameMain(conceived);
        System.out.println("Вы выйграли! - слово: "+conceived);
    }

    public static void gameMain(String conceived) {
        char chek1;
        char chek2;
        String answer;

        do {
            System.out.print("Введите слово ");
            answer = sc.nextLine();
            for (int i = 0; i < answer.length(); i++) {
                chek1 = answer.charAt(i);
                for (int j = 0; j < conceived.length(); j++) {
                    chek2 = conceived.charAt(j);
                    if (chek1 == chek2 && i == j) {
                        String charToString = Character.toString(chek2);
                        char temp = chek2;
                        hashPaste[i] = charToString;
                        continue;
                    }
                }
            }
            for (int l = 0; l < hashPaste.length; l++) {
                System.out.print(hashPaste[l]);
                hashPaste[l] = "#";
            }
            System.out.println();
        } while (!conceived.equals(answer));
    }
} 
